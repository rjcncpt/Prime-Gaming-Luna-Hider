{
  "manifest_version": 3,
  "name": "Prime Gaming Luna Hider",
  "version": "1.1",
  "description": "Blendet ausgew√§hlte Bereiche auf Prime Gaming aus.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://luna.amazon.de/claims/home*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/luna-16.png",
    "48": "icons/luna-48.png",
    "128": "icons/luna-128.png"
  }
}
